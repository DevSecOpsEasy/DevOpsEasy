pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo 'Clone GITHub'
				git 'https://github.com/jenkins-docs/simple-java-maven-app.git'
            }
        }
		
		stage('Build') {
            steps {
                echo 'Build with Maven'
				sh 'mvn clean install'
            }
        }
		
		stage('Deploy') {
            steps {
                echo 'Deploy the war file'
				deploy adapters: [tomcat9(credentialsId: 'Tomcat-Creds', path: '', url: 'http://54.197.44.242:8081/')], contextPath: 'Pipeline_Test_code', war: '**/*.war'
            }
        }
    }
}
